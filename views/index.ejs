<!DOCTYPE html>
<html>

<head>
	<title>
		<%= title %>
	</title>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, height=device-height, initial-scale=1.0, user-scalable=no">

	<!-- Socket.IO -->
	<script src="/socket.io/socket.io.js"></script>

	<!-- Font Awesome -->
	<script src="https://use.fontawesome.com/d64ac3c306.js"></script>

	<!-- Jquery Core -->
	<script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>

	<!-- Bootstrap Core-->
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa"
	 crossorigin="anonymous"></script>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u"
	 crossorigin="anonymous">

	<!-- Normalize.css -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/7.0.0/normalize.min.css" integrity="sha256-HxaKz5E/eBbvhGMNwhWRPrAR9i/lG1JeT4mD6hCQ7s4="
	 crossorigin="anonymous" />

	<!-- SweetAlert 2 -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/6.6.4/sweetalert2.min.css" integrity="sha256-zgaKkhKpXzSrPyXVfczHhygcPSHyhHD+PSWnq3LZHHs="
	 crossorigin="anonymous" />
	<script src="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/6.6.4/sweetalert2.min.js" integrity="sha256-ekbnNY56NMALfM+xMBTe2rJkzgVCnmvJUUsKazZQQT8="
	 crossorigin="anonymous"></script>

	<!-- Animate -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.5.2/animate.min.css" integrity="sha256-j+P6EZJVrbXgwSR5Mx+eCS6FvP9Wq27MBRC/ogVriY0="
	 crossorigin="anonymous" />

	<!-- Custom scrollbar library (mCustomScrollbar) -->
	<script src="https://cdn.jsdelivr.net/jquery.mcustomscrollbar/3.1.5/jquery.mCustomScrollbar.min.js" integrity="sha256-bjm6T61ueH+TXzPqjayRBbE4TK4lBBoSvBCIBchlmPs="
	 crossorigin="anonymous"></script>
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/jquery.mcustomscrollbar/3.1.5/jquery.mCustomScrollbar.min.css" integrity="sha256-JHGEmB629pipTkMag9aMaw32I8zle24p3FpsEeI6oZU="
	 crossorigin="anonymous">

	<!--RegEx-->
	<script src="https://unpkg.com/xregexp/xregexp-all.js"></script>

	<!--HTML Encode-->
	<script src="/javascripts/he.js"></script>
	
	<!-- Fonts  -->
	<link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
	<link href="https://fonts.googleapis.com/css?family=Roboto+Condensed" rel="stylesheet">
	<link href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet">

	<!-- Private CSS & JS -->
	<link rel="stylesheet" href="/stylesheets/style.css">
	<script src="/javascripts/scripts.js"></script>
</head>

<body>
	<!-- Registration page -->
	<div id="reg-page" class="container">
		<div class="col-xs-12">
			<form class="form-signin">
				<h3 class="form-signin-heading text-center">Please sign in to chat</h3>
				<label for="reg-username" class="sr-only">Username</label>
				<input id="reg-username" type="text" class="form-control" placeholder="Your name" required autofocus data-placement="left">
				<button id="reg-btn" class="btn btn-lg btn-primary btn-block" type="button" style="margin-top:10px;">Sign in</button>
			</form>
			<p class="text-center"><em>Developed by <a style="text-decoration:none;" href="https://www.facebook.com/davidbull931997" target="_blank"><mark style="background-color:#fcf8e3;color: #00B7FF;">Phan Ngoc Lam</mark></a></em></p>
			<p class="text-center" id="copy-right">&copy; </p>
		</div>
	</div>

	<!-- Public Chatting page -->
	<div id="chat-page" class="row" style="margin:0;display:none;">
		<div id="nav-bar" class="row" style="margin: 0;padding:0;">
			<div id="logout" class="pull-right" style="padding-left:5px;border-left:1px solid black;">
				Hi, <span id="currentUserName"></span>
				<button class="btn btn-danger" type="button" id="logout-btn" style="margin-left:10px;">Logout</button>
			</div>
			<div id="tools" class="pull-right">
				<a href="#" id="canvas-icon" class="tools fa fa-pencil-square-o fa-lg" aria-hidden="true" title="Only available in private chat"
				 data-placement="bottom"></a>
				<a href="#" id="webrtc-icon" class="tools fa fa-video-camera fa-lg" aria-hidden="true" title="Only available in private chat"
				 data-placement="bottom"></a>
			</div>
		</div>
		<div class="col-xs-4 col-sm-2" id="ccu" style="background-color: white;padding:0;">
			<div class="panel panel-default" style="margin-bottom:0;">
				<div class="panel-heading">
					<p class="text-center panel-title">Concurrent Users</p>
				</div>
				<ul class="list-group">
				</ul>
			</div>
		</div>
		<div class="col-xs-8 col-sm-10" id="chatbox" style="padding:0;">
			<a href="#" id="ccu-icon" class="fa fa-users fa-lg" style="color:black;text-decoration:none;position:absolute;z-index:1;background-color:lightblue;"></a>
			<div class="row" id="chatlog" style="background-color:#f7ffe0;margin:0;">
			</div>
			<div class="row" id="inputform" style="margin:0;">
				<div class="col-xs-12" style="padding:0;position:relative;">
					<input id="msg-input" type="text" name="input" placeholder="Input message here!" style="width:100%;margin:0;position:absolute;"
					 data-toggle="tooltip" data-placement="left" title="Please input message!">
					<a href="#" style="position:absolute;" id="emoji-btn" class="material-icons"><i class="material-icons">tag_faces</i></a>
					<a href="#" style="position:absolute;" id="msg-btn"></a>
				</div>
			</div>
		</div>
	</div>

	<!-- Private chatting -->
	<div id="private-chat-page" style="display:none;">

	</div>
</body>

</html>